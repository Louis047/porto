{
  "manifest_version": 3,
  "name": "Porto Browser Migration",
  "version": "1.0",
  "description": "Automatically migrate browsing data securely.",
  "permissions": ["history", "bookmarks", "cookies", "storage", "activeTab"],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
  },
  "host_permissions": ["http://localhost:8080/*"],
  "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
  }
}
